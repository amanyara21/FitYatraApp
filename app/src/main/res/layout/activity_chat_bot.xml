<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChatBotActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalScrollView"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/chatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/inputField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your answer here" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Send" />


    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputLayout"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealInputPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Show Meal Input"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/exercisePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Navigate to Exercise Fragment"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/weightPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Open Weight Editor"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/glucosePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Open Glucose Editor"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dietPlanPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Navigate to Diet Plan Fragment"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/addDataPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Add Data"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/mainPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Navigate to Main Activity"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/posturePrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Posture Detection"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/calorieStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Show Calorie Graph"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/stepStatPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Show Step Counts"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/weightStatPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/prompt_background"
                android:padding="16dp"
                android:text="Show weight Graph"
                android:textColor="@android:color/black" />


        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>


